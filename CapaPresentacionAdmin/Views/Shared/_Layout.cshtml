<!DOCTYPE html>
<html>
<head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Mi aplicación ASP.NET</title>
    @Styles.Render("~/Content/css") @*boundul para los css*@
    @*@Scripts.Render("~/bundles/modernizr")*@
</head>
<body class="sb-nav-fixed">

    <!--barra navegacion-->
    <nav class="sb-topnav navbar navbar-expand navbar-dark bg-dark">
        <!-- Navbar Brand-->
        <a class="navbar-brand ps-3" href="index.html">Sistema Venta</a>
        <!-- Sidebar Toggle-->
        <button class="btn btn-link btn-sm order-1 order-lg-0 me-4 me-lg-0" id="sidebarToggle" href="#!"><i class="fas fa-bars"></i></button>

        <ul class="navbar-nav ms-auto me-0 me-md-3 my-2 my-md-0">
            <li class="nav-item dropdown">
                <a class="nav-link dropdown-toggle" id="navbarDropdown" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false"><i class="fas fa-user fa-fw"></i></a>
                <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
                    <li><a class="dropdown-item" href="#!">Correo Usuario</a></li>
                    <li><hr class="dropdown-divider" /></li>
                    <li><a class="dropdown-item" href="#!">Cerrar Sesión</a></li>
                </ul>
            </li>
        </ul>
    </nav>
    <div id="layoutSidenav">

        <div id="layoutSidenav_nav">
            <nav class="sb-sidenav accordion sb-sidenav-dark" id="sidenavAccordion">
                <div class="sb-sidenav-menu">
                    <div class="nav">

                        <div class="sb-sidenav-menu-heading">Inicio</div>
                        <a class="nav-link" href="@Url.Action("Index","Home")">
                            <div class="sb-nav-link-icon"><i class="fas fa-home"></i></div>
                            Dashboard
                        </a>

                        <div class="sb-sidenav-menu-heading">Gestión</div>

                        <a class="nav-link" href="@Url.Action("Clientes","Gestion")">
                            <div class="sb-nav-link-icon"><i class="fas fa-user-friends"></i></div>
                            Clientes
                        </a>

                        <a class="nav-link" href="@Url.Action("Productos","Gestion")">
                            <div class="sb-nav-link-icon"><i class="fas fa-cube"></i></div>
                            Productos
                        </a>

                        <div class="sb-sidenav-menu-heading">Ventas</div>
                        <a class="nav-link" href="@Url.Action("Vender","Venta")">
                            <div class="sb-nav-link-icon"><i class="fas fa-cash-register"></i></div>
                            Vender
                        </a>

                        <a class="nav-link" href="@Url.Action("Reportes","Venta")">
                            <div class="sb-nav-link-icon"><i class="fas fa-chart-pie"></i></div>
                            Reportes
                        </a>

                        <div class="sb-sidenav-menu-heading">Pedidos</div>
                        <a class="nav-link" href="@Url.Action("Pedidos","Pedidos")">
                            <div class="sb-nav-link-icon"><i class="fas fa-clipboard-list"></i></div>
                            Pedidos
                        </a>

                        <div class="sb-sidenav-menu-heading">Configuración</div>
                        <a class="nav-link" href="@Url.Action("Usuarios","Configuracion")">
                            <div class="sb-nav-link-icon"><i class="fas fa-users-cog"></i></div>
                            Usuarios
                        </a>
                        <a class="nav-link" href="@Url.Action("Configuracion","Configuracion")">
                            <div class="sb-nav-link-icon"><i class="fas fa-tools"></i></div>
                            Configuración
                        </a>



                    </div>
                </div>
                <div class="sb-sidenav-footer">
                    <div class="small">Logged in as:</div>
                    Start Bootstrap
                </div>
            </nav>
        </div>
        <div id="layoutSidenav_content">
            <main>
                <div class="container-fluid px-4">

                    @RenderBody()

                </div>
            </main>
            <footer class="py-4 bg-light mt-auto">
                <div class="container-fluid px-4">
                    <div class="d-flex align-items-center justify-content-between small">
                        <div class="text-muted">Copyright &copy; Your Website 2023</div>
                        <div>
                            <a href="#">Privacy Policy</a>
                            &middot;
                            <a href="#">Terms &amp; Conditions</a>
                        </div>
                    </div>
                </div>
            </footer>
        </div>
    </div>



